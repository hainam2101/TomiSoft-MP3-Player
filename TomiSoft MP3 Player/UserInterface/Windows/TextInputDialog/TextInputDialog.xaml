<Window x:Class="TomiSoft.MP3Player.UserInterface.Windows.TextInputDialog.TextInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TomiSoft.MP3Player.UserInterface.Windows.TextInputDialog"
        mc:Ignorable="d"
        Title="TextInputDialog" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
		ShowInTaskbar="False" SizeToContent="WidthAndHeight">
	<Grid Margin="10,10,10,10">
		<Grid.RowDefinitions>
			<RowDefinition Height="46*"/>
			<RowDefinition Height="22*"/>
			<RowDefinition Height="43*"/>
		</Grid.RowDefinitions>

		<Label Grid.Row="0" Content="Text here" x:Name="UI_Text"/>
		<TextBox Grid.Row="1" x:Name="UI_TextBox" KeyUp="UI_TextBox_KeyUp"/>
		<Button x:Name="btnCancel" Content="Mégse" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="266,13,0,0" Grid.Row="2" Height="20" Click="btnCancel_Click"/>
		<Button x:Name="btnOk" Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="186,13,0,0" Grid.Row="2" Click="btnOk_Click"/>
	</Grid>
</Window>
