<Window x:Class="TomiSoft_MP3_Player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="clr-namespace:TomiSoft_MP3_Player"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TomiSoft MP3 Player" SizeToContent="WidthAndHeight" Background="#FF3C3C3C" KeyUp="Window_KeyUp"
        ResizeMode="CanMinimize"
        AllowDrop="True"
        Drop="Window_Drop">
    <Window.Resources>
        <local:DoubleToTimeConverter x:Key="DoubleToTimeConverter" />
    </Window.Resources>

    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.MouseEnter">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" Storyboard.TargetName="FileOpenButton" From="0.0" To="1.0" Duration="0:0:0.2">
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
        <EventTrigger RoutedEvent="Window.MouseLeave">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" Storyboard.TargetName="FileOpenButton" From="1.0" To="0.0" Duration="0:0:0.2">
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid Height="336" Width="270" Name="UI_Player">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="99"/>
        </Grid.RowDefinitions>
        <local:PlaybackControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" Grid.Row="1" x:Name="PlaybackController">
            <local:PlaybackControl.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF151515"/>
                </LinearGradientBrush>
            </local:PlaybackControl.Background>
        </local:PlaybackControl>
        <Image x:Name="albumArt" HorizontalAlignment="Left" Height="170" VerticalAlignment="Top" Width="170" Margin="47,21,0,0" Source="{Binding AlbumImage}" Stretch="UniformToFill"/>
        <Button Content="&#x1f4c2;" Name="FileOpenButton" Opacity="0.0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Height="20" Margin="240,6,0,0" Click="FileOpenButton_Click"/>
        <Label x:Name="lSongTitle" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="38,-4,0,0" Foreground="#FFAAAAAA" Content="{Binding Title}" Width="190">
            <Label.Effect>
                <DropShadowEffect BlurRadius="3" ShadowDepth="1"/>
            </Label.Effect>
        </Label>

        <Label x:Name="lLyrics" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,191,0,0" Foreground="#FFAAAAAA" Content="{Binding Lyrics}" Width="250" Height="46">
            <Label.Effect>
                <DropShadowEffect BlurRadius="3" ShadowDepth="1"/>
            </Label.Effect>
        </Label>
    </Grid>
</Window>
